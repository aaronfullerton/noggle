<!doctype html>
<html>
  <head>
    <title>Noggle</title>
    <link href='https://fonts.googleapis.com/css?family=Oxygen:400,700' rel='stylesheet' type='text/css'>
    <style>

	    html, body {
	    	font-family: "Oxygen"
	    }

    	div.grid, div.center {
    		text-align: center;
    		display: block;
    		margin: 0 auto;
    	}

    	h2 {
    		display: inline-block;
    		padding: 10px;
    		margin: 0;
    		width: 80px;
    		height: 80px;
    		line-height: 68px;
    		font-size: 48px;
    		text-align: center;
    		position: relative;
    	}

		h2:before {
			font-family: "KG Flavor and Frames Three";
			content: 'b';
			font-size: 140px;
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			color: orange;
			font-weight: 300;
		};

    	h1 {
    		text-align: center;
    	}

    	div.row {
    		margin: 0;
    	}

    	button {
    		margin-top: 15px;
    		padding: 5px;
    	}

		.row1 h2.box2:before {
			color: #ff22aa;
		}

		.row3 h2.box3:before {
			color: blue;
		}

    </style>
  </head>
  <body>
    <div id="root"></div>
    <script src="/static/bundle.js"></script>
  </body>
</html>
